#!/bin/bash
# Configure IP addresses for transit's interfaces
ip addr add 10.0.1.2/24 dev eth0  # Link to youtube
ip addr add 10.0.2.1/24 dev eth1  # Link to pakistan
ip addr add 10.0.3.1/24 dev eth2  # Link to upstream
ip link set eth0 up
ip link set eth1 up
ip link set eth2 up

# Start FRRouting
/etc/init.d/frr start
